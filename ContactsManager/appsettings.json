{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=THANHANH\\SQLEXPRESS;Initial Catalog=ContactsManager;Integrated Security=True;Encrypt=False;TrustServerCertificate=True"
