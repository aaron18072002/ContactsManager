@if (@ViewBag.CurrentSortBy == @ViewBag.ColumnName && @ViewBag.CurrentSortOrderOption == SortOrderOptions.ASC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrderOption=@SortOrderOptions.DESC">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-down"></i>
    </th>
}
else if (@ViewBag.CurrentSortBy == @ViewBag.ColumnName && @ViewBag.CurrentSortOrderOption == SortOrderOptions.DESC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrderOption=@SortOrderOptions.ASC">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrderOption=@SortOrderOptions.ASC">
            @ViewBag.DisplayName
        </a>
    </th>
}