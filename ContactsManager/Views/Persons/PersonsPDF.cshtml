@model IEnumerable<PersonResponse>
@{
    Layout = null;
}
<link href="@("http://" + Context.Request.Host.ToString() + "/Stylesheet.css")" rel="stylesheet" />
<h1>Persons</h1>

<table class="table w-100 mt">
    <thead>
        <th>PersonName</th>
        <th>Email</th>
        <th>DateOfBirth</th>
        <th>Age</th>
        <th>Gender</th>
        <th>CountryName</th>
        <th>Address</th>
        <th>ReceiveNewsLetters</th>
    </thead>
    <tbody>
        @foreach (var personResponse in Model)
        {
            <tr>
                <td style="width:15%">@personResponse.PersonName</td>
                <td style="width:15%">@personResponse.Email</td>
                <td style="width:12%">@personResponse.DateOfBirth?.ToString("dd MM yyyy")</td>
                <td style="width:10%">@personResponse.Age</td>
                <td style="width:9%">@personResponse.Gender</td>
                <td style="width:16%">@personResponse.CountryName</td>
                <td style="width:18%">@personResponse.Address</td>
                <td style="width:9%">@personResponse.ReceiveNewsLetters</td>
            </tr>
        }
    </tbody>
</table>